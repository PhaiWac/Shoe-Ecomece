<div class="w-4/5 mx-auto">
    <div class="p-5">
        <h2 class="font-bold text-3xl text-gray-500 ">เพิ่มสินค้า</h2>
        <form action="/admin/addstock" method = "POST" class="block font-semibold mt-3 bg-gray-900 rounded-md p-3 text-white md:flex" enctype="multipart/form-data">
            <div class="p-3 mx-auto">
                <label for="title" class=" mb-2 mx-auto">Title</label>
                <input type="text" id = 'title' name = 'title' class="text-center bg-gray-50 w-full rounded-sm  shadow-sm mt-3 font-medium text-black">
            </div>
            <div class="p-3 mx-auto">
                <label for="price" class=" mb-2 mx-auto">Price</label>
                <input type="number" id = 'price' name = 'price' class="text-center bg-gray-50 w-full rounded-sm  shadow-sm mt-3 font-medium text-black">
            </div>
            <div class="p-3 mx-auto">
                <label for="count" class=" mb-2 mx-auto">Count</label>
                <input type="number" id = 'count' name = 'count' class="text-center bg-gray-50 w-full rounded-sm  shadow-sm mt-3 font-medium text-black">
            </div>
            <div class="p-3 mx-auto">
                <label for="image" class=" mb-2 mx-auto">Image</label>
                <input multiple name = 'image' class="text-center block mt-3 text-sm text-gray-900 rounded-sm cursor-pointer border-0 " aria-describedby="file_input_help" id="file_input" type="file">
                <p class="mt-1 text-sm text-gray-500 dark:text-gray-300" id="file_input_help">SVG, PNG, JPG or GIF (MAX. 800x400px).</p>
            </div>
            <div class="p-3 mx-auto my-auto ">
                <button type="submit" class="bg-green-400 w-full rounded-sm px-4 py-1  text-black mx-auto ">Add</button>
            </div>
        </form>
    </div>

    <div class="grid grid-cols-1 gap-2 m-5 md:grid-cols-4 md:gap-5">
        <% data.forEach((v) => { %>
            <div class="p-5 w-fit bg-gray-50 rounded-md shadow-md  ">
                <div class="mb-5 ">
                    <img src="/img/<%=v.image%>" class="object-contain " width="300" height="300" >
                </div>
                <div class="flex items-center justify-between">
                    <h1 class="text-2xl font-bold uppercase">
                        <%= v.name  %>
                    </h1>
                    <form action="/admin/removeitem/<%= v._id %>?_method=DELETE" method = "POST">
                        <button type="submit w-full" >
                            <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-6">
                                <path stroke-linecap="round" stroke-linejoin="round" d="M20.25 7.5l-.625 10.632a2.25 2.25 0 01-2.247 2.118H6.622a2.25 2.25 0 01-2.247-2.118L3.75 7.5m6 4.125l2.25 2.25m0 0l2.25 2.25M12 13.875l2.25-2.25M12 13.875l-2.25 2.25M3.375 7.5h17.25c.621 0 1.125-.504 1.125-1.125v-1.5c0-.621-.504-1.125-1.125-1.125H3.375c-.621 0-1.125.504-1.125 1.125v1.5c0 .621.504 1.125 1.125 1.125z" />
                            </svg>  
                        </button>
                    </form>                    
                </div>
                <h2 class="text-xl font-medium">
                    <%= (v.count <= 0 ? "สินค้าหมดแล้ว" : "เหลือ " + v.count + " คู่" ) %>
                </h2>
            </div>
        <% }) %>
    </div>
</div>
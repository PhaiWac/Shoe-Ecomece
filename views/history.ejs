<section>
    <div class="w-4/5 mt-5 mx-auto">
        <h1 class="text-3xl font-bold ">ประวัติการซื้อ</h1>
        <table class="table-auto w-full">
            <thead class="uppercase text-white bg-gray-900 rounded-md w-full">
                <tr>
                    <th class="px-6 py-3">อีเมล</th>
                    <th class="px-6 py-3">ชื่อสินค้า</th>
                    <th class="px-6 py-3">ราคา</th>
                    <!-- <th class="px-6 py-3">วันที่ซื้อ</th> -->
                </tr>
            </thead>
            <tbody>
                <% data.forEach((v) => {  %>
                    <tr class="text-center bg-gray-50 border-b-2">
                        <td class="px-6 py-3"><%= v.email %></td>
                        <td class="px-6 py-3"><%= v.item %></td>
                        <td class="px-6 py-3"><%= v.price %></td>
                        <!-- <td class="px-6 py-3"><%= v.date %></td> -->
                    </tr>
                <% }) %>
            </tbody>
        </table>
    </div>
</section>